data "aws_eks_cluster_auth" "cluster_auth" {
  name = module.eks.cluster_endpoint
}

provider "aws" {
  region = local.region
}

# ECR always authenticates with `us-east-1` region
# Docs -> https://docs.aws.amazon.com/AmazonECR/latest/public/public-registries.html
provider "aws" {
  alias  = "ecr"
  region = "us-east-1"
}
